extends ../layout/default

block head
  title Sign Up

block feet
  script(src='/views/signup/social.min.js?#{cacheBreaker}')

block body
  div.container
    div.row
      div.col-sm-6
        div.page-header
          h1 最後確認
        div#signup

  script(type='text/template', id='tmpl-signup')
    form
      div.alerts
        |<% _.each(errors, function(err) { %>
        div.alert.alert-danger.alert-dismissable
          button.close(type='button', data-dismiss='alert') &times;
          |<%- err %>
        |<% }); %>
      div.form-group(class!='<%- errfor.email ? "has-error" : "" %>')
        label.control-label 請輸入 Email:
        input.form-control(type='text', name='email', value!='<%= email %>')
        span.help-block <%- errfor.email %>
      div.form-group
        button.btn.btn-primary.btn-signup(type='button') 建立帳號

  script(type='text/template', id='data-email') !{email}
